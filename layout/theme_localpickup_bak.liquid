<!doctype html>
{% include 'settings' %}
{% include 'set-html-class' %}
{% include 'set-template-type' %}

<!-- Proudly powered by Shopify - https://shopify.com -->

{% comment %}
  HTML - The html_class is very important for theme functionality so please don't remove or change it (but feel free to add to it in the set-html-class.liquid snippet)
{% endcomment %}
<html class="{{ html_class }}" lang="{{ shop.locale }}">
  <head>
    {% comment %}
      Shopify
    {% endcomment %}
    {{ content_for_header }}

    {% comment %}
      Meta
    {% endcomment %}
    {% include 'meta' %}
    {% include 'meta-social' %}

    {% comment %}
      CSS
    {% endcomment %}
    {{ 'normalize/8.0.1/normalize.min.css' | prepend: cdn | stylesheet_tag }}
    {{ 'font-awesome/4.7.0/css/font-awesome.min.css' | prepend: cdn | stylesheet_tag }}
    {{ 'flickity/2.2.1/flickity.min.css' | prepend: cdn | stylesheet_tag }}
    {% if template_type == 'index' or template_type == 'product' %}
    {{ 'https://cdn.shopify.com/shopifycloud/shopify-plyr/v1.0/shopify-plyr.css' | stylesheet_tag }}
    {{ 'https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css' | stylesheet_tag }}
    {% endif %}
    {{ 'jquery-typeahead/2.11.0/jquery.typeahead.min.css' | prepend: cdn | stylesheet_tag }}
    {{ 'theme.scss.css' | asset_url | stylesheet_tag }}
    {{ 'theme-custom.scss.css' | asset_url | stylesheet_tag }}
    {{ 'fonts.scss.css' | asset_url | stylesheet_tag }}

    {% comment %}
      JavaScript
    {% endcomment %}
    <script src="{{ 'lazysizes/4.0.1/plugins/respimg/ls.respimg.min.js' | prepend: cdn }}" async="async"></script>
    <script src="{{ 'lazysizes/4.0.1/plugins/rias/ls.rias.min.js' | prepend: cdn }}" async="async"></script>
    <script src="{{ 'lazysizes/4.0.1/plugins/parent-fit/ls.parent-fit.min.js' | prepend: cdn }}" async="async"></script>
    <script src="{{ 'lazysizes/4.0.1/plugins/bgset/ls.bgset.min.js' | prepend: cdn }}" async="async"></script>
    <script src="{{ 'lazysizes/4.0.1/lazysizes.min.js' | prepend: cdn }}" async="async"></script>

    {% include 'theme-js-config' %}

    {% if template_type == 'index' or template_type == 'product' %}
    {{ 'https://www.youtube.com/player_api' | script_tag }}
    {{ 'https://player.vimeo.com/api/player.js' | script_tag }}
    {% endif %}
    {{ 'modernizr/2.8.3/modernizr.min.js' | prepend: cdn | script_tag }}
    {{ 'lodash.js/4.17.4/lodash.min.js' | prepend: cdn | script_tag }}
    {{ 'jquery/3.1.1/jquery.min.js' | prepend: cdn | script_tag }}
    {{ 'jquery.matchHeight/0.7.0/jquery.matchHeight-min.js' | prepend: cdn | script_tag }}
    {{ 'velocity/1.3.1/velocity.min.js' | prepend: cdn | script_tag }}
    {{ 'flickity/2.2.1/flickity.pkgd.min.js' | prepend: cdn | script_tag }}
    {{ 'jquery-typeahead/2.11.0/jquery.typeahead.min.js' | prepend: cdn | script_tag }}
    {{ 'fancybox/2.1.5/jquery.fancybox.min.js' | prepend: cdn | script_tag }}
    {{ 'fitvids/1.1.0/jquery.fitvids.min.js' | prepend: cdn | script_tag }}
    {{ 'jquery-zoom/1.7.18/jquery.zoom.min.js' | prepend: cdn | script_tag }}
    {{ 'jquery-cookie/1.4.1/jquery.cookie.min.js' | prepend: cdn | script_tag }}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}

    {% if template contains 'customers' %}
      {{ 'customer_area.js' | shopify_asset_url | script_tag }}
    {% endif %}
  </head>

  {% comment %}
    Body
  {% endcomment %}
  <body>
    <div id="loading">
      <div class="spinner"></div>
    </div>

    {% include 'facebook-sdk' %}

    {% comment %}
      Header & main menu
    {% endcomment %}
    {% section 'header' %}

    {% comment %}
      App body
    {% endcomment %}
    <div id="app-body">
      <div id="app-body-inner">
        {{ content_for_layout }}
      </div>
    </div>

    {% comment %}
      Footer
    {% endcomment %}
    {% section 'footer' %}

    <div id="overlay-background"></div>

    {% comment %}
      JavaScript
    {% endcomment %}
    {{ '/services/javascripts/currencies.js' | script_tag }}
    {{ 'jquery.currencies.min.js' | asset_url | script_tag }}
    {{ 'theme.js' | asset_url | script_tag }}
    {{ 'theme-custom.js' | asset_url | script_tag }}

    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>

    <script>
      (function ($) {
        $(document).ready(function () {
          var loading = $('#loading');
          loading.css({
            'opacity': '0',
            'visibility': 'hidden'
          });
          setTimeout(function () {
            loading.hide()
          }, 1000);
        });
      }(jQuery.noConflict()));
      (function ($) {
        var meta = $('head meta[name="viewport"]');
        $("input, select, textarea").on('touchstart', function() {
          meta.attr('content', 'width=device-width, initial-scale=1, user-scalable=0');
        });
        $("input, select, textarea").on('touchend', function() {
          setTimeout(function () {
            meta.attr('content', 'width=device-width, initial-scale=1, user-scalable=1');
          }, 100);
        });
      }(jQuery.noConflict()));
    </script>
  </body>
</html>
