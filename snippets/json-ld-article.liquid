{%- assign rich_snippet_article_image_size = rich_snippet_article_image_width | append: 'x' | append: rich_snippet_article_image_height -%}

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "NewsArticle",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ article.url }}"
  },
  "headline": "{{ article.title | strip_html | escape }}",
  "image": {
    "@type": "ImageObject",
    "url": "https:{{ article | img_url: rich_snippet_article_image_size }}",
    "width": "{{ rich_snippet_article_image_width }}",
    "height": "{{ rich_snippet_article_image_height }}"
  },
  "datePublished": "{{ article.published_at | strip_html | escape }}",
  "dateModified": "{{ article.published_at | strip_html | escape }}",
  "author": {
    "@type": "Person",
    "name": "{{ article.author | strip_html | escape }}"
  },
   "publisher": {
    "@type": "Organization",
    "name": "{{ shop.name | strip_html | escape }}",
    "logo": {
      "@type": "ImageObject",
      "url": "https:{{ 'logo.png' | asset_url }}"
    }
  },
  "description": "{{ article.excerpt | strip_html | escape }}"
}
</script>
