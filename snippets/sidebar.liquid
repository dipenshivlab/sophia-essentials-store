{% comment %}
  Custom sidebars can be used by assigning a sidebar snippet name in the template. The default side can also be overridden by assigning a sidebar_side variable in the template. E.g.
  {%- assign sidebar = 'custom-sidebar' -%}
  {%- assign sidebar_side = 'left' -%}
{% endcomment %}

<section class="{{ class }}">

  <h1 class="visually-hidden">{{ 'general.accessibility.sidebar' | t }}</h1>

  {% comment %} Separator {% endcomment %}
  {% include 'separator' class:'lined full margin-top-150 margin-bottom-150 show-for-small' %}

  {% comment %} Show default sidebar unless a custom one has been specified {% endcomment %}
  {% case sidebar %}
    {% when 'sidebar-customers-account' %}
      {% render 'sidebar-customers-account' %}
    {% when 'sidebar-customers-order' %}
      {% render 'sidebar-customers-order' %}
    {% else %}
      {% section 'sidebar' %}
  {% endcase %}

</section>

{%- assign class = nil -%}
