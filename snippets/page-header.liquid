{% unless title %}
  {%- assign title = page_title -%}
{% endunless %}

<header class="page-header {{ class }}">
  
  <div class="{{ col1_class }}">
    <h1 class="title" data-default-text="{{ title }}">{{ title }}</h1>
  </div>

  {% if content %}
  <div class="{{ col2_class }}">
    {% include content %}
  </div>
  {% endif %}

</header>

{%- assign class = nil -%}
