{% include 'settings' %}

{% if settings.social_twitter_link == blank %}
 {% assign twitter_username = 'shopify' %}
{% else %}
  {% assign twitter_username = settings.social_twitter_link | split: 'twitter.com/' | last %}
{% endif %}

<a class="twitter-timeline" data-height="{{ block.settings.height | escape }}" data-theme="{{ block.settings.style }}" data-link-color="{{ block.settings.link_color }}" href="https://twitter.com/{{ twitter_username }}"></a>
