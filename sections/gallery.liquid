{% include 'settings' %}

{% if section.settings.width == 'width-100' %}
  {%- assign section_class = 'width-100' %}
{% else %}
  {%- assign section_class = 'column-max' %}
{% endif %}

{% if section.blocks.size < section.settings.images_per_row_large %}
  {%- assign images_per_row_large = section.blocks.size -%}
{% else %}
  {%- assign images_per_row_large = section.settings.images_per_row_large -%}
{% endif %}

{% comment %}
  Section
{% endcomment %}
{%- render 'separator' section_type: 'gallery', class: section_class, show_title: true %}

  <div class="small-item-grid-1 medium-item-grid-2 large-item-grid-{{ images_per_row_large }}">

    {% comment %}
      Blocks
    {% endcomment %}
    {% for block in section.blocks %}
      {% include 'block-open' class: 'item', section: section, block: block, %}

      {% if block.settings.image != blank %}
        {% include 'image' with block.settings.image, image_type: 'gallery', image_link_url: block.settings.image_link_url %}
      {% else %}
        {% include 'image' image_placeholder: true %}
      {% endif %}
      {% include 'block-close' %}
    {% endfor %}

  </div>

{% include 'section-close'  %}

{% comment %}
  Schema
{% endcomment %}
{% schema %}
{
  "name": "Gallery",
  "class": "index-section section-gallery",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "id": "width",
      "type": "select",
      "label": "Width",
      "options": [
        {"value": "column-max", "label": "Content"},
        {"value": "width-100", "label": "Screen"}
      ]
    },
    {
      "type": "range",
      "id": "images_per_row_large",
      "label": "Images per row on large screens",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "image_link_url",
          "type": "url",
          "label": "Image link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery",
      "category": "Image",
      "settings": {
        "images_per_row_large": 3
      },
      "blocks": [
        {
          "type": "image",
          "settings": {
          }
        },
        {
          "type": "image",
          "settings": {
          }
        },
        {
          "type": "image",
          "settings": {
          }
        }
      ]
    }
  ]
}
{% endschema %}
