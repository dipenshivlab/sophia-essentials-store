{% include 'settings' %}

{% render 'section-open', section: section, type: 'map', title: false %}

{% assign show_map = false %}

{%- if section.settings.map_api_key != blank and section.settings.map_address -%}
  {% assign show_map = true %}
{%- endif -%}

{% comment %}
  Section
{% endcomment %}
{%- render 'separator' section_type: 'map', show_title: false %}

{% comment %}
  CSS
{% endcomment %}
<style>
  #{{ section_id }} {
  }

  #{{ section_id }} .map-section-inner {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.color_text }};
  }

  #{{ section_id }} .map-section-inner .cell {
    width: 50%;
  }

  #{{ section_id }} .map-section-inner-content {
    padding: 3rem;
    text-align: center;
  }

  #{{ section_id }} .map-section-inner-content i {
    font-size: 1.125em;
    margin-right: 0.25em;
  }

  #{{ section_id }} .map-section-inner-content-heading {
    color: {{ section.settings.color_text }};
    {% if section.settings.heading != blank and section.settings.address == blank %}
      margin: 0;
    {% else %}
      margin-top: 0;
    {% endif %}
  }

  #{{ section_id }} .map-section-inner-content-address > *:last-child {
    margin-bottom: 0;
  }

  #{{ section_id }} .map-section-inner-content {
    padding: 3rem;
    text-align: center;
  }

  #{{ section_id }} .map-section-inner-map {
    {% if section.settings.image %}
      background-repeat: no-repaet;
      background-position: {{ section.settings.image_position }};
      background-size: cover;
    {% endif %}
  }

  #{{ section_id }} .map-section-inner-map .placeholder-svg {
    background-color: transparent;
  }


  @media screen and (max-width: 640px) {
    #{{ section_id }} .map-section-inner {
      display: block;
    }

    #{{ section_id }} .map-section-inner .cell {
      display: block;
      width: auto;
    }

    #{{ section_id }} .map-section-inner-map {
      height: 55vh;
    }
  }

  .no-js #{{ section_id }} .map-section-inner-map {
    {% if section.settings.image %}
      background-image: url("{{ section.settings.image | img_url: '800x' }}");
    {% endif %}
  }

</style>

<div class="map-section-inner table">
  <div class="map-section-inner-content cell">
    {% unless section.settings.heading == blank %}
      <h2 class="map-section-inner-content-heading lhxt">
        {{ section.settings.heading | escape }}
      </h2>
    {% endunless %}
    {% unless section.settings.address == blank %}
      <div class="map-section-inner-content-address font-size-15">{{ section.settings.address }}</div>
    {% endunless %}

    {% if section.settings.directions_button_label != blank and section.settings.map_address != blank %}

      {% include 'separator' class:'margin-top-50 margin-bottom-50' %}

      <a href="https://maps.google.com?daddr={{ section.settings.map_address | escape }}" target="_blank" class="button">
        {% if section.settings.show_pin %}
          <i class="fa fa-map-marker" aria-hidden="true"></i>
        {% endif %}
        {{ section.settings.directions_button_label | escape }}
      </a>

    {% endif %}
  </div>
  <div class="map-section-inner-map cell lazyload" data-bgset="{% if section.settings.image != blank %}{% include 'image-bgset' image: section.settings.image %}{% endif %}" data-sizes="auto" data-parent-fit="cover">
    {% if show_map %}
      <div class="google-map" id="map-{{ section.id }}" data-api-key="{{ section.settings.map_api_key }}" data-address="{{ section.settings.map_address | escape }}">
      </div>
    {% else %}
      {% unless section.settings.image %}
        <div class="map-section-inner-map-placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endunless %}
    {% endif %}
  </div>
</div>


{% include 'section-close'  %}

{% comment %}
  Schema
{% endcomment %}
{% schema %}
  {
    "name": "Map",
    "class": "index-section section-map",
    "settings": [
     {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our store"
      },
      {
        "type": "richtext",
        "id": "address",
        "label": "Address and hours",
        "default": "<p>123 Fake St.<br>Toronto, Canada</p><p>Mon - Fri, 10am - 9pm<br>Saturday, 11am - 9pm<br>Sunday, 11am - 5pm</p>"
      },
      {
        "id": "map_address",
        "type": "text",
        "label": "Map address",
        "info": "Google Maps will find the exact location",
        "default": "80 Spadina Ave, Toronto"
      },
      {
        "type": "text",
        "id": "directions_button_label",
        "label": "Map link label",
        "default": "Directions"
      },
      {
        "id": "show_pin",
        "type": "checkbox",
        "label": "Show pin",
        "default": true
      },
      {
        "id": "map_api_key",
        "type": "text",
        "label": "Google Maps API key",
        "info": "You’ll need to [register a Google Maps API Key](https://help.shopify.com/manual/using-themes/troubleshooting/map-section-api-key) to display the map"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#f0f1f2"
      },
      {
        "type": "header",
        "content": "Background image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Displayed if the map isn’t loaded"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Image position",
        "default": "center center",
        "options": [
          {
            "label": "Top left",
            "value": "top left"
          },
          {
            "label": "Top center",
            "value": "top center"
          },
          {
            "label": "Top right",
            "value": "top right"
          },
          {
            "label": "Middle left",
            "value": "center left"
          },
          {
            "label": "Middle center",
            "value": "center center"
          },
          {
            "label": "Middle right",
            "value": "center right"
          },
          {
            "label": "Bottom left",
            "value": "bottom left"
          },
          {
            "label": "Bottom center",
            "value": "bottom center"
          },
          {
            "label": "Bottom right",
            "value": "bottom right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Map",
        "category": "Store Information"
      }
    ]
  }
{% endschema %}
