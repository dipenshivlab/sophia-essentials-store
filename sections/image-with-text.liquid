{% include 'settings' %}

{% render 'section-open', section: section, type: 'image-with-text', title: false %}


{% comment %}
  Section
{% endcomment %}
{%- render 'separator' section_type: 'image-with-text', show_title: false %}


{% comment %}
  CSS
{% endcomment %}
<style>
  #{{ section_id }} .image-with-text-section-inner .cell {
    width: 50%;
  }

  #{{ section_id }} .image-with-text-section-inner-text {
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section_id }} .image-with-text-section-inner-text-text > *:last-child {
    margin-bottom: 0;
  }

  #{{ section_id }} .image-with-text-section-inner-text-heading {
    color: {{ section.settings.color_text }};
    {% if section.settings.heading != blank and section.settings.text == blank %}
      margin: 0;
    {% else %}
      margin-top: 0;
    {% endif %}
  }

  #{{ section_id }} .image-with-text-section-inner.mod-layout-image-left .image-with-text-section-inner-text {
    padding-left: 4rem;
  }

  #{{ section_id }} .image-with-text-section-inner.mod-layout-image-right .image-with-text-section-inner-text {
    padding-right: 4rem;
  }

  @media screen and (max-width: 640px) {
    #{{ section_id }} .image-with-text-section-inner {
      display: block;
    }

    #{{ section_id }} .image-with-text-section-inner .cell {
      display: block;
      width: auto;
    }

    #{{ section_id }} .image-with-text-section-inner.mod-layout-image-left .image-with-text-section-inner-text {
      padding: 2rem 0 0;
    }

    #{{ section_id }} .image-with-text-section-inner.mod-layout-image-right .image-with-text-section-inner-text {
      padding: 0 0 3rem;
    }
  }
</style>

{% capture image_layout %}
  {% if section.settings.image %}
    {% include 'image' with section.settings.image %}
  {% else %}
    {% include 'image' image_placeholder: true %}
  {% endif %}
{% endcapture %}

<div class="image-with-text-section-inner mod-layout-image-{{ section.settings.layout }} table">

  {% if section.settings.layout == 'left' %}
    <div class="image-with-text-section-inner-image cell">
      {{ image_layout }}
    </div>
  {% endif %}

  <div class="image-with-text-section-inner-text cell">

    {% unless section.settings.heading == blank %}
      <h2 class="image-with-text-section-inner-text-heading lhxt">
        {{ section.settings.heading | escape }}
      </h2>
    {% endunless %}

    {% unless section.settings.text == blank %}
      <div class="image-with-text-section-inner-text-text">{{ section.settings.text }}</div>
    {% endunless %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}

      {% include 'separator' class:'margin-top-50 margin-bottom-50' %}

      <a href="{{ section.settings.button_link }}" target="" class="button">
        {{ section.settings.button_label | escape }}
      </a>

    {% endif %}
  </div>

  {% if section.settings.layout == 'right' %}
    <div class="image-with-text-section-inner-image cell">
      {{ image_layout }}
    </div>
  {% endif %}

</div>

{% include 'section-close'  %}


{% comment %}
  Schema
{% endcomment %}
{% schema %}
  {
    "name": "Image with text",
    "class": "index-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "id": "width",
        "type": "select",
        "label": "Width",
        "options": [
          {"value": "column-max", "label": "Content"},
          {"value": "width-100", "label": "Screen"}
        ],
        "default": "column-max"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Image alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "image_first",
        "label": "Force image to show first on mobile",
        "default": true
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Image with text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with text",
        "category": "Image"
      }
    ]
  }
{% endschema %}
